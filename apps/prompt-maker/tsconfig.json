{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib": ["../../libs/prompt-maker-core/src/index.ts"],
      "@/lib/*": ["../../libs/prompt-maker-core/src/*"],
      "@prompt-maker/core": ["../../libs/prompt-maker-core/src/index.ts"],
      "@prompt-maker/core/*": ["../../libs/prompt-maker-core/src/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
